<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<label>Title</label><br>
			<%= f.text_field :title %><br>
			<label>Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit "Update Book" %><br>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			<%= link_to "Back", books_path %>
		</div>
	</div>
</div>
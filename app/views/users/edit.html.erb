<div class="container">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	<label for="name">Name</label>
	<%= f.text_field :name %>
	<label for="image">Image</label>
	<%= f.attachment_field :profile_image %>
	<label for="introduction">Introduction</label>
	<%= f.text_area :introduction %><br>
	<%= f.submit "Update User" %>
	<% end %>
</div>